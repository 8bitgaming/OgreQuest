{{!-- Current character stats --}}
<h2>Current Stats for {{character.name}}</h2>

{{!-- upgrade stats --}}
<div class="w3-card w3-green" style="height: 350px">
    <div class="w3-col m4 l3">
        <button class="w3-button w3-xxlarge w3-black">Name</button> {{character.name}}
        <button class="w3-button w3-xxlarge w3-black">Health</button>{{character.hp}}
        <button class="w3-button w3-xxlarge w3-black">Attack</button>{{character.attack}}
        <button class="w3-button w3-xxlarge w3-black">Luck</button>
    </div>

    <button class="w3-button w3-xxlarge w3-black">Gold/Score: </button>
    {{character.gold}}
    <div class="w3-col m8 l9">
        <button class="w3-button w3-xxlarge w3-black addAttack">+1 for 32g</button>

    </div>
    <div class="w3-col m8 l9">
        <button class="w3-button w3-xxlarge w3-black AddHealth">+1 for 8g</button>
    </div>
    <div class="w3-col m8 l9">
        <button class="w3-button w3-xxlarge w3-black">+1 for 32g</button>
    </div>
</div>


<form class="upgrade-form" user="{{character.id}}" name="{{character.name}}" health="{{character.hp}}"
    attack="{{character.attack}}" gold="{{character.gold}}">

    <p>Gold: </p>{{character.gold}}

    <p>Health: </p>{{character.hp}}
    <button class="addHealth">Add Health</button>

    <p>Attack: </p>{{character.attack}}
    <button class="addAttack">Add Attack</button>

</form>

<script src="/javascript/statUpgrade.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js" type="text/js"></script>