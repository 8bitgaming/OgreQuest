<div class="get-characters w3-container">
    <h3>{{email}} created characters:</h3>
    
  {{#each this.characters }}
  <section class="character">
    <div class="meta">
      {{name}} with {{gold}} gold and {{attack}} attack
      <button class="delete-character" charId="{{id}}" userID="{{id}}">Delete  {{name}}</button>
      <button class="start-battle" charId="{{id}}" userID="{{id}}">Battle with {{name}}</button>
    </div>
  </section>
  {{/each}}
</div>

<script src="/javascript/deleteCharacter.js"></script>
<script src="/javascript/battle.js"></script>